{
    "name": "slides-extended",
    "version": "2.3.0",
    "description": "Create markdown-based presentations with reveal.js in Obsidian",
    "author": "Erin Schnabel",
    "license": "MIT",
    "homepage": "https://github.com/ebullient",
    "main": "src/main.ts",
    "scripts": {
        "preinstall": "npx only-allow pnpm",
        "dev": "node esbuild.config.mjs",
        "prebuild": "pnpm exec biome check ./src",
        "build": "node esbuild.config.mjs production",
        "postbuild": "pnpm run test",
        "fix": "pnpm exec biome check --write ./src",
        "format": "pnpm exec biome format ./src",
        "lint": "pnpm exec biome lint ./src",
        "test": "jest",
        "coverage": "jest --coverage",
        "preversion": "pnpm run test && node esbuild.config.mjs production",
        "version": "auto-changelog -p",
        "brat-notes": "run() { auto-changelog --stdout --hide-credit --hide-empty-releases --template .github/changelog.hbs -v $1 --starting-version $1  > release-notes.md; }; run"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ebullient/obsidian-theme-ebullientworks.git"
    },
    "bugs": {
        "url": "https://github.com/ebullient/obsidian-theme-ebullientworks/issues"
    },
    "auto-changelog": {
        "backfillLimit": false,
        "commitLimit": false,
        "ignoreCommitPattern": "(ðŸ”–|ðŸ‘·|changelog|.* README\\.).*",
        "replaceText": {
            "([;.,] [rR]esolves) #\\d+\\.?\\s*$": "$1",
            "([;.,] [Ff]ixes) #\\d+\\.?\\s*$": "$1"
        },
        "startingDate": "2024-02-17"
    },
    "devDependencies": {
        "@biomejs/biome": "^2.4.4",
        "@fortawesome/fontawesome-free": "^7.2.0",
        "@popperjs/core": "^2.11.8",
        "@types/color": "^4.2.0",
        "@types/fs-extra": "^11.0.4",
        "@types/glob": "^9.0.0",
        "@types/jest": "^30.0.0",
        "@types/mustache": "^4.2.6",
        "@types/node": "^25.3.0",
        "@types/request": "^2.48.13",
        "@types/yaml-front-matter": "^4.1.3",
        "auto-changelog": "^2.5.0",
        "builtin-modules": "^5.0.0",
        "dotenv": "^17.3.1",
        "esbuild": "^0.27.3",
        "esbuild-plugin-copy": "^2.1.1",
        "esbuild-sass-plugin": "^3.6.0",
        "highlight.js": "^11.11.1",
        "jest": "^30.2.0",
        "katex": "^0.16.28",
        "mathjax": "^4.1.1",
        "obsidian": "^1.12.2",
        "obsidian-utilities": "^1.1.5",
        "reveal.js": "^5.2.1",
        "reveal.js-menu": "^2.1.0",
        "reveal.js-mermaid-plugin": "^11.12.3",
        "reveal.js-plugins": "^4.6.0",
        "reveal.js-pointer": "^0.1.4",
        "sass": "^1.97.3",
        "ts-jest": "^29.4.6",
        "ts-mockito": "^2.6.1",
        "ts-node": "^10.9.2",
        "tslib": "^2.8.1",
        "typescript": "^5.9.3"
    },
    "dependencies": {
        "@codemirror/state": "^6.5.4",
        "@codemirror/view": "^6.39.15",
        "@fastify/static": "^9.0.0",
        "@types/js-yaml": "^4.0.9",
        "chart.js": "^4.5.1",
        "color": "^4.2.3",
        "fastify": "^5.7.4",
        "fs-extra": "^11.3.3",
        "glob": "^13.0.6",
        "js-yaml": "^4.1.1",
        "jszip": "^3.10.1",
        "mustache": "^4.2.0",
        "yaml-front-matter": "^4.1.1"
    }
}
