{
    "compilerOptions": {
        "outDir": "./build",
        "baseUrl": ".",
        "inlineSourceMap": true,
        "inlineSources": true,
        "module": "ESNext",
        "target": "es2022",
        "allowJs": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "importHelpers": true,
        "lib": [
            "DOM",
            "es2021"
        ],
        "types": [
            "node",
            "jest"
        ]
    },
    "exclude": [
        "node_modules",
        "docs",
        "build"
    ],
    "include": [
        "**/*.ts"
    ]
}
